<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="9dip">

    <TextView
        android:id="@+id/first_prize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="29dp"
        android:gravity="center_vertical"
        android:text="First Prize :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/event_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Event Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/second_prize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_prize"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/first_prize"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:text=" Second Prize :"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/third_prize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/second_prize"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/second_prize"
        android:layout_marginTop="31dp"
        android:gravity="center_vertical"
        android:text="Third Prize :"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/second_prize_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/third_prize_group"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/second_prize"
        android:gravity="center_vertical"
        android:text="second Group"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/third_prize_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/third_prize"
        android:layout_marginStart="114dp"
        android:gravity="center_vertical"
        android:text="Third Group"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_prize_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/second_prize_group"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/first_prize"
        android:gravity="center_vertical"
        android:text="First group"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
</android.support.v7.widget.CardView>